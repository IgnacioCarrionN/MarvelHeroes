<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content" android:layout_weight="66" android:gravity="center">
    <ProgressBar
            style="?android:attr/progressBarStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/progressBar" android:layout_marginTop="32dp"/>
    <TextView
            android:text="@string/loading"
            android:layout_width="match_parent"
            android:layout_height="match_parent" android:id="@+id/txtLoading" android:gravity="center"
            android:layout_marginBottom="32dp" android:layout_marginLeft="24dp" android:layout_marginRight="24dp"/>
</LinearLayout>
